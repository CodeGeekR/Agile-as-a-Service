                              </div>
                              <h4 class="font-medium text-gray-900 text-sm flex-1">${story.title}</h4>
                            </div>
                            
                            ${story.description ? `
                              <p class="text-xs text-gray-600 mb-3 line-clamp-2">${story.description}</p>
                            ` : ''}
                            
                            <div class="flex items-center space-x-3 text-xs">
                              <span class="text-gray-500">${epic?.title}</span>
                              <span class="px-2 py-1 rounded font-medium ${
                                story.priority === 'CRITICAL' ? 'bg-red-100 text-red-800' :
                                story.priority === 'HIGH' ? 'bg-orange-100 text-orange-800' :
                                'bg-gray-100 text-gray-800'
                              }">
                                ${story.priority}
                              </span>
                            </div>
                          </div>
                          
                          <div class="ml-4 flex items-center space-x-2">
                            <span class="inline-flex items-center justify-center w-8 h-8 text-xs font-bold rounded-full ${
                              story.points <= 3 ? 'bg-green-200 text-green-800' :
                              story.points <= 8 ? 'bg-yellow-200 text-yellow-800' :
                              'bg-red-200 text-red-800'
                            }">
                              ${story.points}
                            </span>
                          </div>
                        </div>
                      </div>
                    `;
                  }).join('')}
                </div>
              </div>
            </div>
          </div>
        </div>
      `;
    };
    
    // Sprint Planning Helper Functions
    let selectedStories = [];
    let selectedPoints = 3;
    
    window.toggleStorySelection = function(storyId) {
      const storyCard = document.querySelector(`[data-story-id="${storyId}"]`);
      const checkbox = storyCard.querySelector('.story-checkbox');
      const checkIcon = checkbox.querySelector('svg');
      
      if (selectedStories.includes(storyId)) {
        // Deselect
        selectedStories = selectedStories.filter(id => id !== storyId);
        storyCard.classList.remove('border-purple-300', 'bg-purple-50');
        storyCard.classList.add('border-gray-200', 'bg-white');
        checkbox.classList.remove('border-purple-500', 'bg-purple-500');
        checkbox.classList.add('border-gray-300');
        checkIcon.classList.add('hidden');
      } else {
        // Select
        selectedStories.push(storyId);
        storyCard.classList.remove('border-gray-200', 'bg-white');
        storyCard.classList.add('border-purple-300', 'bg-purple-50');
        checkbox.classList.remove('border-gray-300');
        checkbox.classList.add('border-purple-500', 'bg-purple-500');
        checkIcon.classList.remove('hidden');
      }
      
      updateSprintMetrics();
    };
    
    function updateSprintMetrics() {
      const totalPoints = selectedStories.reduce((sum, id) => {
        const story = appData.stories.find(s => s.id === id);
        return sum + (story?.points || 0);
      }, 0);
      
      document.getElementById('selected-count').textContent = selectedStories.length;
      document.getElementById('total-points').textContent = totalPoints;
      
      const velocityEstimate = totalPoints > 50 ? 'Optimista' : totalPoints > 30 ? 'Realista' : 'Conservadora';
      const velocityElement = document.getElementById('velocity-estimate');
      velocityElement.textContent = velocityEstimate;
      velocityElement.className = `font-medium ${
        totalPoints > 50 ? 'text-red-600' : 
        totalPoints > 30 ? 'text-amber-600' : 
        'text-green-600'
      }`;
      
      const startBtn = document.getElementById('start-sprint-btn');
      const sprintName = document.getElementById('sprint-name').value;
      startBtn.disabled = selectedStories.length === 0 || !sprintName.trim();
    }
    
    window.showNewStoryFormInPlanning = function() {
      document.getElementById('new-story-form-planning').classList.remove('hidden');
    };
    
    window.hideNewStoryFormInPlanning = function() {
      document.getElementById('new-story-form-planning').classList.add('hidden');
      document.getElementById('new-story-title').value = '';
      document.getElementById('new-story-description').value = '';
      selectedPoints = 3;
      updatePointsSelector();
    };
    
    window.selectPointsInPlanning = function(points) {
      selectedPoints = points;
      updatePointsSelector();
    };
    
    function updatePointsSelector() {
      document.querySelectorAll('.points-btn').forEach(btn => {
        const btnPoints = parseInt(btn.dataset.points);
        if (btnPoints === selectedPoints) {
          btn.className = 'points-btn w-8 h-8 rounded-full text-sm font-bold transition-colors bg-blue-600 text-white';
        } else {
          btn.className = 'points-btn w-8 h-8 rounded-full text-sm font-bold transition-colors bg-gray-200 text-gray-700 hover:bg-gray-300';
        }
      });
    }
    
    window.createNewStoryInPlanning = function() {
      const title = document.getElementById('new-story-title').value;
      const description = document.getElementById('new-story-description').value;
      
      if (title.trim()) {
        const newStory = {
          id: Date.now(),
          title: title,
          description: description || 'Sin descripción específica.',
          status: 'TODO',
          points: selectedPoints,
          epicId: 1,
          sprintId: null,
          assignee: user.name.split(' ').map(n => n[0]).join(''),
          priority: 'MEDIUM',
          tags: ['new']
        };
        
        appData.stories.push(newStory);
        saveData();
        hideNewStoryFormInPlanning();
        
        // Refresh the modal
        closeModal();
        showSprintPlanningModal();
      }
    };
    
    window.startNewSprint = function() {
      const sprintName = document.getElementById('sprint-name').value;
      const sprintGoal = document.getElementById('sprint-goal').value;
      
      if (selectedStories.length > 0 && sprintName.trim()) {
        // Complete current sprint if exists
        if (appData.activeSprint) {
          appData.activeSprint.status = 'COMPLETED';
        }
        
        // Calculate total points
        const totalPoints = selectedStories.reduce((sum, id) => {
          const story = appData.stories.find(s => s.id === id);
          return sum + (story?.points || 0);
        }, 0);
        
        // Create new sprint
        const newSprint = {
          id: Date.now(),
          name: sprintName,
          goal: sprintGoal || 'Optimizar la existencia mediante metodologías Agile aplicadas a la vida diaria',
          startDate: new Date().toISOString(),
          endDate: new Date(Date.now() + 14 * 24 * 60 * 60 * 1000).toISOString(),
          status: 'ACTIVE',
          totalPoints: totalPoints,
          completedPoints: 0,
          userId: user.id
        };
        
        // Assign stories to new sprint
        selectedStories.forEach(storyId => {
          const story = appData.stories.find(s => s.id === storyId);
          if (story) {
            story.sprintId = newSprint.id;
          }
        });
        
        // Update app data
        appData.activeSprint = newSprint;
        if (!appData.sprints) appData.sprints = [];
        appData.sprints.push(newSprint);
        
        saveData();
        closeModal();
        renderDashboard();
        
        // Show success message
        setTimeout(() => {
          const celebration = document.createElement('div');
          celebration.innerHTML = `
            <div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); 
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; 
                        padding: 24px; border-radius: 16px; z-index: 1000; text-align: center;
                        box-shadow: 0 20px 40px rgba(0,0,0,0.15); animation: celebrationPop 0.6s ease-out;">
              <div style="font-size: 32px; margin-bottom: 12px;">🚀</div>
              <div style="font-weight: 600; margin-bottom: 8px; font-size: 18px;">¡Sprint Iniciado!</div>
              <div style="font-size: 14px; opacity: 0.9;">${sprintName} está ahora activo con ${selectedStories.length} historias</div>
            </div>
          `;
          
          document.body.appendChild(celebration);
          
          setTimeout(() => {
            document.body.removeChild(celebration);
          }, 3000);
        }, 500);
      }
    };
    
    // Modal functions with Linear-inspired design
    window.showNewStoryModal = function() {
      document.getElementById('modals-container').innerHTML = `
        <div class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center z-50 p-4">
          <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full max-h-[90vh] overflow-hidden">
            <div class="bg-gradient-to-r from-gray-900 to-gray-800 text-white p-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                  </div>
                  <h2 class="text-lg font-semibold">${t('story.createNew')}</h2>
                </div>
                <button onclick="closeModal()" class="text-white hover:text-gray-300 transition-colors p-1 rounded-lg hover:bg-white hover:bg-opacity-10">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </button>
              </div>
            </div>
            
            <form onsubmit="createNewStory(event)" class="p-6 space-y-6">
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-3">${t('story.title')}</label>
                <input type="text" id="story-title" class="w-full p-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="${t('story.titlePlaceholder')}" required />
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-3">${t('story.description')}</label>
                <textarea id="story-description" class="w-full p-4 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none" rows="3" placeholder="${t('story.descriptionPlaceholder')}"></textarea>
              </div>
              
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-3">${t('story.storyPoints')}</label>
                <div class="flex space-x-2">
                  ${[1, 2, 3, 5, 8, 13, 21].map(points => `
                    <button type="button" onclick="selectPoints(${points})" class="story-points-btn w-12 h-12 rounded-xl font-bold transition-all bg-gray-100 text-gray-700 hover:bg-gray-200 hover:scale-105" data-points="${points}">
                      ${points}
                    </button>
                  `).join('')}
                </div>
                <input type="hidden" id="story-points" value="3" />
              </div>
              
              <div class="flex space-x-3 pt-4">
                <button type="button" onclick="closeModal()" class="flex-1 px-6 py-3 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-xl font-medium transition-colors">
                  ${t('story.cancel')}
                </button>
                <button type="submit" class="flex-1 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-xl font-medium transition-colors">
                  ${t('story.create')}
                </button>
              </div>
            </form>
          </div>
        </div>
      `;
      
      // Select default points
      selectPoints(3);
    };
    
    window.selectPoints = function(points) {
      document.getElementById('story-points').value = points;
      document.querySelectorAll('.story-points-btn').forEach(btn => {
        if (parseInt(btn.dataset.points) === points) {
          btn.className = 'story-points-btn w-12 h-12 rounded-xl font-bold transition-all bg-gray-900 text-white scale-105';
        } else {
          btn.className = 'story-points-btn w-12 h-12 rounded-xl font-bold transition-all bg-gray-100 text-gray-700 hover:bg-gray-200 hover:scale-105';
        }
      });
    };
    
    window.createNewStory = function(e) {
      e.preventDefault();
      
      const title = document.getElementById('story-title').value;
      const description = document.getElementById('story-description').value;
      const points = parseInt(document.getElementById('story-points').value);
      
      const newStory = {
        id: Date.now(),
        title: title,
        description: description || t('dashboard.noSpecificDescription'),
        status: 'TODO',
        points: points,
        epicId: 1,
        sprintId: appData.activeSprint.id,
        assignee: user.name.split(' ').map(n => n[0]).join(''),
        priority: 'MEDIUM',
        tags: ['new']
      };
      
      appData.stories.push(newStory);
      appData.activeSprint.totalPoints += points;
      saveData();
      renderDashboard();
      closeModal();
    };
    
    window.closeModal = function() {
      document.getElementById('modals-container').innerHTML = '';
      selectedStories = [];
    };
    
    // Event listeners
    document.getElementById('sprint-planning-btn').addEventListener('click', showSprintPlanningModal);
    document.getElementById('new-story-btn').addEventListener('click', showNewStoryModal);
    document.getElementById('mobile-new-story').addEventListener('click', showNewStoryModal);
    document.getElementById('mobile-sprint-planning').addEventListener('click', showSprintPlanningModal);
    
    // Listen for language changes and update everything
    window.addEventListener('localeChanged', () => {
      console.log('🌐 Dashboard: Language changed, updating data and UI...');
      
      // Update data with new language while preserving status
      const localizedData = getLocalizedData();
      
      // Preserve story statuses
      localizedData.stories.forEach((newStory, index) => {
        if (appData.stories[index]) {
          newStory.status = appData.stories[index].status;
        }
      });
      
      // Preserve sprint progress
      localizedData.activeSprint.completedPoints = appData.activeSprint?.completedPoints || 7;
      
      appData = localizedData;
      saveData();
      
      // Force update all page content
      forceUpdatePageContent();
      
      // Re-render dashboard with new data
      renderDashboard();
    });
    
    // Initialize dashboard
    renderDashboard();
    
    // Force update page content after initial render
    setTimeout(() => {
      forceUpdatePageContent();
    }, 100);
  });
</script>

